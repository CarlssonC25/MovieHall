@model MovieHall.SaveModel.SaveMovie
@{
    var genres = ViewBag.Genres as List<MovieHall.Models.Genre>;
    var watched = ViewBag.WatchedWith as List<MovieHall.Models.WatchedWith>;
}

<form id="createMovieForm" enctype="multipart/form-data">
    <div class="modal-header">
        <h5 class="modal-title" id="createMovieModalLabel">Neuen Film hinzufügen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
    </div>
    <div class="modal-body">

        <div class="mb-3">
            <label for="movieName">Name</label>
            <input class="form-control" id="movieName" name="Name" required />
        </div>

        <div class="mb-3">
            <label for="buy">Kaufmedium</label>
            <select class="form-control" id="buy" name="Buy">
                <option value="0">Noch nicht</option>
                <option value="1">DVD</option>
                <option value="2">Blu-ray</option>
                <option value="3">3D</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="description">Beschreibung</label>
            <textarea class="form-control" id="description" name="Description" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label for="imageFile">Bild (wird gespeichert in /img/Movie_imgs)</label>
            <input type="file" name="Img" id="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label for="fsk">FSK</label>
            <select class="form-control" id="fsk" name="FSK">
                <option value="0">0+</option>
                <option value="6">6+</option>
                <option value="12">12+</option>
                <option value="16">16+</option>
                <option value="18">18+</option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" name="Favorit" class="form-check-input" id="favorit" value="true" />
            <label class="form-check-label" for="favorit">Favorit</label>
        </div>

        <div class="mb-3">
            <label for="releaseDate">Veröffentlichungsdatum</label>
            <input type="date" name="ReleaseDate" id="releaseDate" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="link">Trailer-Link</label>
            <input type="url" name="Link" id="link" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="language">Sprache</label>
            <select class="form-control" name="Language" id="language">
                <option value="de">Deutsch</option>
                <option value="en">Englisch</option>
            </select>
        </div>

        <div class="checkbox-popup mb-3 row">
            <label class="ps-0">Genres</label>
            @foreach (var g in genres)
            {
                if (g.Belonging_to.Contains("M") || g.Belonging_to.Contains("m"))
                {
                    <div class="form-check col-4">
                        <input class="form-check-input" type="checkbox" name="SelectedGenreIds" value="@g.Id" id="genre_@g.Id" />
                        <label class="form-check-label" for="genre_@g.Id">@g.Name</label>
                    </div>
                }
            }
        </div>

        <div class="checkbox-popup mb-3 row">
            <label class="ps-0">Mit wem geschaut</label>
            @foreach (var w in watched)
            {
                <div class="form-check col-4">
                    <input class="form-check-input" type="checkbox" name="SelectedWatchedWithIds" value="@w.Id" id="watched_@w.Id" />
                    <label class="form-check-label" for="watched_@w.Id">@w.Name</label>
                </div>
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Speichern</button>
    </div>
</form>