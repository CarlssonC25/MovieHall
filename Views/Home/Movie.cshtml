@{
    ViewData["Title"] = "Movie";
}

<section id="movie" class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="body-HD-size">

            <div class="w-100 extra-space">
                <div class="extra-fill">
                </div>
                <div class="extra">
                    <button class="btn btn-primary mt-3" id="openCreateMovieModal">Neuer Film</button>
                </div>
            </div>

            @* AJAX-Container *@
            <div id="movieContainer">
                @await Html.PartialAsync("~/Views/Movie/_MovieListPartial.cshtml", Model)
            </div>
             
