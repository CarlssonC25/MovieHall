@model MovieHall.SaveModel.SaveAnime
@{
    @*Top/Rank*@
    var topOptions = new Dictionary<int, string>
    {
        { 1, "Top 1" },
        { 2, "Top 2" },
        { 3, "Top 3" },
        { 4, "Top 4" },
        { 5, "Top 5" },
        { 6, "Top 6" },
        { 7, "Top 7" },
        { 8, "Top 8" },
        { 9, "Top 9" },
        { 10, "Top 10" }
    };

    @*Language*@
    var isCheckedEng = Model.Language.Contains("Englisch") ? "checked" : "";
    var isCheckedJap = Model.Language.Contains("Japanisch") ? "checked" : "";
    var isCheckedChi = Model.Language.Contains("Chinesisch") ? "checked" : "";
    var isCheckedGer = Model.Language.Contains("Deutsch") ? "checked" : "";

    @*Genre*@
    var genres = ViewBag.Genres as List<MovieHall.Models.Genre>;
    var selectedGenreIds = Model.AnimeGenres?.Select(g => g.GenreId).ToList() ?? new List<int>();

    @*WatchedWith*@
    var watched = ViewBag.WatchedWith as List<MovieHall.Models.WatchedWith>;

    @*Country*@
    var countryOptions = new Dictionary<string, string>
    {
        { "", "Land Wählen..." },
        { "Japan", "Japan" },
        { "China", "China" },
        { "Korea", "Korea" }
    };
}

<form id="createAnimeForm" enctype="multipart/form-data">
    <div class="modal-header">
        <h5 class="modal-title" id="createAnimeModalLabel">Neuen Film hinzufügen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
    </div>
    <div class="modal-body">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label for="animeName">Name</label>
            <input class="form-control" id="animeName" value="@Model.Name" name="Name" required />
            <input type="hidden" name="ParentId" value="@Model.ParentId" />
            <input type="hidden" name="WhatTimes" value="1" />
        </div>

        <div class="mb-3">
            <label for="animeOrginalName">Orginal Name</label>
            <input class="form-control" id="animeOrginalName" name="Orginal_Name" value="@Model.Orginal_Name" required />
        </div>

        <div class="mb-3">
            <label asp-for="Top">Rank</label>
            <select asp-for="Top" class="form-control">
                @foreach (var top in topOptions)
                {
                    if (Model.Top == top.Key)
                    {
                        <option value="@top.Key" selected>@top.Value</option>
                    }
                    else
                    {
                        <option value="@top.Key">@top.Value</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="buy">Kaufmedium</label>
            <select class="form-control" id="buy" name="Buy">
                <option value="0">Noch nicht</option>
                <option value="1">DVD</option>
                <option value="2">Blu-ray</option>
                <option value="3">3D</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="imageFile">Bild (wird gespeichert in /img/Anime_imgs)</label>
            <input type="file" name="Img" id="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label for="releaseDate">Veröffentlichungsdatum</label>
            <input type="date" name="ReleaseDate" id="releaseDate" class="form-control"/>
        </div>

        <div class="mb-3">
            <label for="link">Link</label>
            <input type="url" name="Link" id="link" class="form-control" value="@Model.Link" />
        </div>

        <div class="mb-3">
            <label for="episodes">Episoden</label>
            <input type="number" name="Episodes" id="episodes" class="form-control" value="@Model.Episodes" />
        </div>

        <div class="checkbox-popup mb-3 row">
            <label class="ps-0">Sprache</label>
            <div class="form-check col-4">
                <input class="form-check-input" type="checkbox" name="Language" value="Englisch" id="langEng" @isCheckedEng />
                <label class="form-check-label" for="langEng">Englisch</label>
            </div>
            <div class="form-check col-4">
                <input class="form-check-input" type="checkbox" name="Language" value="Japanisch" id="langJap" @isCheckedJap />
                <label class="form-check-label" for="langJap">Japanisch</label>
            </div>
            <div class="form-check col-4">
                <input class="form-check-input" type="checkbox" name="Language" value="Chinesisch" id="langChi" @isCheckedChi />
                <label class="form-check-label" for="langChi">Chinesisch</label>
            </div>
            <div class="form-check col-4">
                <input class="form-check-input" type="checkbox" name="Language" value="Deutsch" id="langGer" @isCheckedGer />
                <label class="form-check-label" for="langGer">Deutsch</label>
            </div>
        </div>

        <div class="checkbox-popup mb-3 row">
            <label class="ps-0">Genres</label>
            @foreach (var g in genres)
            {
                if (g.Belonging_to.Contains("A") || g.Belonging_to.Contains("a"))
                {
                    var isChecked = selectedGenreIds.Contains(g.Id) ? "checked" : "";
                    <div class="form-check col-4">
                        <input class="form-check-input" type="checkbox" name="SelectedGenreIds" value="@g.Id" id="genre_@g.Id" @isChecked />
                        <label class="form-check-label" for="genre_@g.Id">@g.Name</label>
                    </div>
                }
            }
        </div>

        <div class="checkbox-popup mb-3 row">
            <label class="ps-0">Mit wem geschaut</label>
            @foreach (var w in watched)
            {
                <div class="form-check col-4">
                    <input class="form-check-input" type="checkbox" name="SelectedWatchedWithIds" value="@w.Id" id="watched_@w.Id" />
                    <label class="form-check-label" for="watched_@w.Id">@w.Name</label>
                </div>
            }
        </div>

        <div class="mb-3">
            <label for="description">Beschreibung</label>
            <textarea class="form-control" id="description" name="Description" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Country">Land</label>
            <select asp-for="Country" class="form-control">
                @foreach (var option in countryOptions)
                {
                    if (Model.Country == option.Key)
                    {
                        <option value="@option.Key" selected>@option.Value</option>
                    }
                    else
                    {
                        <option value="@option.Key">@option.Value</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Speichern</button>
    </div>
</form>